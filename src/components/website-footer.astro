---
import { Icon } from "astro-icon/components";

import Link from "@/components/navigation/nav-link.astro";
import type { Locale } from "@/config/i18n.config";
import { createI18n } from "@/lib/i18n";

const { t } = await createI18n(Astro.currentLocale as Locale | undefined);

const imprint = t("WebsiteFooter.links.imprint");
---

<footer class="border-t border-t-[#00000026] bg-white">
	<div class="mx-auto grid w-full max-w-screen-lg gap-y-6 px-4 py-12 text-[#444]">
		<div class="flex w-full items-center gap-x-1.5 border-b border-[#00000026] pb-4">
			<Icon aria-hidden="true" class="size-4.5" name="lucide:message-circle" />
			<span class="text-sm font-medium">Kontakt</span>
		</div>

		<div
			class="grid items-start gap-x-8 gap-y-4 xs:grid-cols-[auto_1fr] xs:gap-y-8 md:grid-cols-[auto_1fr_auto_1fr]"
		>
			<div>
				<a class="inline-flex py-1" href="https://www.oeaw.ac.at/acdh/">
					<img
						alt=""
						class="h-10 object-contain"
						loading="lazy"
						src="/assets/images/acdh_logo_with_text_color.svg"
					/>
					<span class="sr-only">ACDH</span>
				</a>
			</div>
			<div class="grid gap-y-2">
				<div class="font-medium">ACDH</div>
				<div>
					Austrian Centre for Digital Humanities
					<br />
					Austrian Academy of Sciences
				</div>
				<div>
					<div>Bäckerstraße 13, 1010 Wien</div>
				</div>
				<div>
					<div>
						T:
						<a
							class="underline decoration-dotted underline-offset-4 hover:no-underline"
							href="tel:+43 1 51581-2200"
						>
							+43 1 51581-2200
						</a>
					</div>
					<div>
						E:
						<a
							class="underline decoration-dotted underline-offset-4 hover:no-underline"
							href="mailto:acdh@oeaw.ac.at"
						>
							acdh@oeaw.ac.at
						</a>
					</div>
				</div>
			</div>

			<div></div>
			<div class="grid gap-y-2">
				<div class="font-medium">Helpdesk</div>
				<div>
					Das ACDH bietet über das Helpdesk-Service Beratung bei Fragen zu Digital
					Humanities-bezogenen Themen an.
				</div>
				<div>
					<a
						class="underline decoration-dotted underline-offset-4 hover:no-underline"
						href="mailto:acdh-helpdesk@oeaw.ac.at"
					>
						Kontakt
					</a>
				</div>
			</div>

			<div class="-mb-4 xs:mb-0">
				<a class="inline-flex py-1" href="https://clariah.at">
					<img
						alt=""
						class="-ml-4 h-[4.5rem] object-contain xs:-mt-4"
						loading="lazy"
						src="/assets/images/clariah-at-logo.png"
					/>
					<span class="sr-only">CLARIAH-AT</span>
				</a>
			</div>
			<div class="grid gap-y-2">
				<div class="font-medium">CLARIAH-AT</div>
				<div>
					E:
					<a
						class="underline decoration-dotted underline-offset-4 hover:no-underline"
						href="mailto:office@clariah.at"
					>
						office@clariah.at
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="bg-[#f1f1f1] py-2 text-center text-sm text-[#444]">
		&copy; Copyright OEAW |
		<Link class="underline decoration-dotted underline-offset-4 hover:no-underline" href="/imprint">
			{imprint}
		</Link>
	</div>
</footer>
